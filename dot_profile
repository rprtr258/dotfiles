# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
	# include .bashrc if it exists
	if [ -f "$HOME/.bashrc" ]; then
		. "$HOME/.bashrc"
	fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ]; then
	PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ]; then
	PATH="$HOME/.local/bin:$PATH"
fi
#. "$HOME/.cargo/env"
export PATH="/home/rprtr258/.cargo/bin:/home/rprtr258/.local/bin:/home/rprtr258/bin:/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games:/snap/bin:/usr/local/go/bin:/home/rprtr258/go/bin:/var/lib/flatpak/exports/bin/:/home/rprtr258/.o3-cli/bin:/home/rprtr258/.krew/bin:/home/rprtr258/.vector/bin"

export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:~/go/bin
export PATH=$PATH:~/bin
export PATH=$PATH:/var/lib/flatpak/exports/bin/
export PATH=$PATH:~/.o3-cli/bin # TODO: remove
export PATH=$PATH:~/.krew/bin # TODO: remove
export EDITOR=nvim
export RIPGREP_CONFIG_PATH=~/.config/.ripgreprc

export AUTOENV_ENABLE_LEAVE=1
source "$HOME/.autoenv/activate.sh"
. "$HOME/.cargo/env"
export GOPROXY="direct"
export GOSUMDB="sum.golang.org"

function bun {
  export BUN_INSTALL="$HOME/.bun"
  export PATH=$BUN_INSTALL/bin:$PATH
}
bun

